<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/exitButton"
        style="@style/SecondaryButtonsAndText"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dp20"
        android:padding="@dimen/dp10"
        android:background="@color/yp_black_and_yp_black"
        android:layout_gravity="bottom|center_horizontal"
        app:icon="@drawable/circle_down_50dp" />

    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dp91"
        android:layout_height="@dimen/dp91"
        android:indeterminateTint="@color/yp_blue_and_yp_blue"
        android:visibility="gone"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</FrameLayout>