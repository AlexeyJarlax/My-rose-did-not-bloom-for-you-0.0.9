<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_white_and_yp_black"
    android:orientation="vertical"
    tools:context=".calendar.ui.event.NewEventFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/verticalBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="bottom"
        app:constraint_referenced_tags="inputDescriptionLayout" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/btnBack"
        style="@style/GoBackButtons"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_btn_back"
        app:title="@string/new_event"
        app:titleMarginBottom="@dimen/dp6" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/addPicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/dp6"
        android:background="@drawable/pl_add_photo_background"
        android:scaleType="centerCrop"
        android:src="@drawable/pl_plus_photo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:shapeAppearanceOverlay="@style/CircleImage"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCityLayout"
        style="@style/PLLayoutForNewPlaylist"
        android:layout_margin="@dimen/dp6"
        app:layout_constraintTop_toBottomOf="@id/addPicture"
        tools:layout_editor_absoluteX="6dp">

        <AutoCompleteTextView
            android:id="@+id/inputCity"
            android:layout_height="50dp"
            android:paddingStart="@dimen/dp16"
            style="@style/PLEditTextForNewPlaylist"
            android:hint="@string/city"
            android:completionThreshold="1" />
    </com.google.android.material.textfield.TextInputLayout>

<!--    <com.google.android.material.textfield.TextInputLayout-->
<!--        android:id="@+id/inputLocationLayout"-->
<!--        style="@style/PLLayoutForNewPlaylist"-->
<!--        android:layout_margin="@dimen/dp6"-->
<!--        android:tag="inputDescriptionLayout"-->
<!--        app:layout_constraintTop_toBottomOf="@id/inputCityLayout">-->

<!--        <com.google.android.material.textfield.TextInputEditText-->
<!--            android:id="@+id/inputLocation"-->
<!--            style="@style/PLEditTextForNewPlaylist"-->
<!--            android:hint="@string/location" />-->
<!--    </com.google.android.material.textfield.TextInputLayout>-->


    <Button
        android:id="@+id/btnChooseLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp6"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp16"
        android:text="@string/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputCityLayout" />

    <TextView
        android:id="@+id/pointLocation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp60"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/btnChooseLocation"
        app:layout_constraintStart_toEndOf="@+id/btnChooseLocation"
        app:layout_constraintTop_toTopOf="@+id/btnChooseLocation" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputDayLayout"
        style="@style/PLLayoutForNewPlaylist"
        android:layout_margin="@dimen/dp6"
        android:tag="inputDescriptionLayout"
        app:layout_constraintTop_toBottomOf="@id/btnChooseLocation">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDay"
            style="@style/PLEditTextForNewPlaylist"
            android:hint="@string/day" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTimeLayout"
        style="@style/PLLayoutForNewPlaylist"
        android:layout_margin="@dimen/dp6"
        android:tag="inputDescriptionLayout"
        app:layout_constraintTop_toBottomOf="@id/inputDayLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputTime"
            style="@style/PLEditTextForNewPlaylist"
            android:hint="@string/time" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputDetailsLayout"
        style="@style/PLLayoutForNewPlaylist"
        android:layout_margin="@dimen/dp6"
        android:tag="inputDescriptionLayout"
        app:layout_constraintTop_toBottomOf="@id/inputTimeLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDetails"
            style="@style/PLEditTextForNewPlaylist"
            android:hint="@string/description" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_event"
        style="@style/PLbuttonCreateNewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/ys_display_medium"
        android:layout_marginBottom="@dimen/dp60"
        android:text="@string/create"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verticalBarrier"
        app:layout_constraintVertical_bias="1" />

    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/dp91"
        android:layout_height="@dimen/dp91"
        android:indeterminateTint="@color/yp_blue_and_yp_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>